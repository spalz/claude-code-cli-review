{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "lib": ["ES2022"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "types": ["node", "vitest/globals"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "media"]
}
